<div class="movie-info js-movie-info-{{ id }}">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        {{ title }}
        <a href="#" data-movie-id="{{ id }}" class="js-close-movie-info pull-right glyphicon glyphicon-remove-circle margin_left"></a>
        <div class="pull-right">
          <span class="label label-info hidden-sm hidden-xs">Released:  {{ released_formatted }}</span>
          <span class="label label-info">Rating: {{ certification }}</span>
          <span class="label label-info hidden-xs">Runtime: {{ runtime }} mins</span>
        </div>
      </h3>
      {{#tagline.length}}
        <h6><em>{{ tagline }}</em></h6>
      {{/tagline.length}}
    </div>
    <div class="panel-body">

      <div class="col-sm-12">
        <p class="movie-info-overview">
          {{ overview }}
        </p>
      </div>
    
      <div class="col-sm-6">
        <span class="label label-info"><a href="http://www.imdb.com/title/{{ imdb_id }}">IMDB</a></span>
        <span class="label label-info">
          <a href="{{ trailer }}"><i class="fa fa-youtube">YouTube</i></a>
        </span>
      </div>

      <div class="col-sm-6 text-right">

        {{#ifCond userid ">" 0}}
          <a href="#" data-id="{{ id }}" data-userid="{{ userid }}" class="btn btn-default js-add-to-favs">Add To Favourites</a>
        {{/ifCond}}

        <a href="movies/{{ id }}" class="btn btn-primary">More Information</a>
      </div>

    </div> 

  </div> 

</div>