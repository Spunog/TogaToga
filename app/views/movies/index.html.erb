<ol class="breadcrumb">
  <li class="active">Trending Movies</li>
</ol>

<div class="row">
  <% @movies.each_with_index do |movie,index| %>

    <!-- Movie: Container -->
    <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6 movie js-movie-item js-movie-item-<%= movie.id %>"
         data-movie-id="<%= movie.id %>">

      <!-- Movie: Poster -->
      <div class="row">
        <div class="col-md-12 movie-poster js-movie-poster">
          <div class="poster-container">
            <%= image_tag(movie.poster.gsub(/.jpg/, '-138.jpg'), size: "138x197", class: 'img-responsive') %>
          </div>
        </div>
      </div>

      <!-- Movie: Title -->
      <div class="row">
        <div class="col-md-12 movie-title">
          <small><%= truncate(movie.title, length: 25) %></small>
        </div>
      </div>

      <!-- Admin -->
      <div class="hide row">
        <div class="col-md-12 movie-misc">
          <small><%= movie.tagline %></small>
          <%= link_to :Edit, movie %>
          <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>

    </div>    

    <% if (index + 1) % 6 == 0 %>
       <!-- Large Movie Info -->
      <div class="col-lg-12 visible-lg-block js-movie-info-container js-movie-info-container-lg"></div>
    <% end %>

    <% if (index + 1) % 4 == 0 %>
       <!-- Medium Movie Info -->
      <div class="col-md-12 visible-md-block js-movie-info-container js-movie-info-container-md"></div>
    <% end %>

    <% if (index + 1) % 2 == 0 %>
       <!-- Small Movie Info -->
      <div class="col-xs-12 visible-sm-block visible-xs-block js-movie-info-container js-movie-info-container-xs"></div>
    <% end %>

  <% end %>
</div>

<div class="row text-center">
  <%= will_paginate @movies,previous_label: h("<"), next_label: h(">"), renderer: BootstrapPagination::Rails %>  
</div>

<!-- Javascript HTML template used for JSON loading -->
<script id="template-movie-info" type="x-tmpl-mustache">

  <div class="movie-info js-movie-info-{{ id }}">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ title }}
          <a href="#" data-movie-id="{{ id }}" class="js-close-movie-info pull-right glyphicon glyphicon-remove-circle margin_left"></a>
          <div class="pull-right">
            <span class="label label-info hidden-sm hidden-xs">Released:  {{ released_formatted }}</span>
            <span class="label label-info">Rating: {{ certification }}</span>
            <span class="label label-info hidden-xs">Runtime: {{ runtime }} mins</span>
          </div>
        </h3>
        {{#tagline.length}}
          <h6><em>{{ tagline }}</em></h6>
        {{/tagline.length}}
      </div>
      <div class="panel-body">

        <div class="col-sm-12">
          <p class="movie-info-overview">
            {{ overview }}
          </p>
        </div>
      
        <div class="col-sm-6">
          <span class="label label-info"><a href="http://www.imdb.com/title/{{ imdb_id }}">IMDB</a></span>
          <span class="label label-info">
            <a href="{{ trailer }}"><i class="fa fa-youtube">YouTube</i></a>
          </span>
        </div>

        <div class="col-sm-6 text-right">
          <a href="movies/{{ id }}" class="btn btn-primary">More Information</a>
        </div>

      </div> 
    </div> 
  
  </div>

</script>