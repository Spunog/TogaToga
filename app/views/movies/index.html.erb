<ol class="breadcrumb">
  <li class="active">Trending Movies</li>
</ol>

<div class="row">

  <% @movies.each_with_index do |movie,index| %>

    <!-- Movie: Container -->
    <div class="grid col-lg-2 col-md-3 col-sm-4 col-xs-6 movie js-movie-item js-movie-item-<%= movie.id %>" data-movie-id="<%= movie.id %>">
      
      <!-- Poster -->
      <figure class="effect-apollo movie-poster js-movie-poster">
        <%= image_tag(movie.posterThumbnailURL, size: "138x197", alt: truncate(movie.title, length: 22) + ' Poster', class: 'img-responsive') %>
        <figcaption>
          <p>Click for more info</p>
        </figcaption>     
      </figure>

      <!-- Movie: Title -->
      <div class="col-md-12 movie-title">
        <small><%= truncate(movie.title, length: 22) %></small>
      </div>

    </div>

    <!-- Row seperators for different resolutions -->
    <% if (index + 1) % 6 == 0 %>
       <!-- Large Movie Info -->
      <div class="col-lg-12 visible-lg-block js-movie-info-container js-movie-info-container-lg"></div>
    <% end %>

    <% if (index + 1) % 4 == 0 %>
       <!-- Medium Movie Info -->
      <div class="col-md-12 visible-md-block js-movie-info-container js-movie-info-container-md"></div>
    <% end %>

    <% if (index + 1) % 3 == 0 %>
       <!-- Small Movie Info -->
      <div class="col-sm-12 visible-sm-block visible-sm-block js-movie-info-container js-movie-info-container-sm"></div>
    <% end %>

    <% if (index + 1) % 2 == 0 %>
       <!-- XS Movie Info -->
      <div class="col-xs-12 visible-xs-block js-movie-info-container js-movie-info-container-xs"></div>
    <% end %>


  <% end %>
</div>

<div class="row text-center">
  <%= will_paginate @movies,previous_label: h("<"), next_label: h(">"), renderer: BootstrapPagination::Rails %>  
</div>