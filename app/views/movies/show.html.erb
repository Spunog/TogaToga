<ol class="breadcrumb">
  <li><%= link_to 'Trending Movies', movies_path %></li>
  <li class="active"><%= @movie.title %></li>
</ol>

<style>
  .fanart-header:after {
    background-image: url(<%= @movie.fanartURL %>);
  }
</style>

<div class="row" style="margin-top:0">

  <div class="col-md-12">
    <div class="img-responsive">
      <div class="fanart-header">

        <div class="row">

          <!-- Left Side -->
          <div class="col-md-3">
            <%= image_tag(@movie.posterURL, size: "138x197", class: 'img-responsive poster', alt: @movie.title + ' Poster') %>
          </div>

          <!-- Right Side -->
          <div class="col-md-9">

            <h1><%= @movie.title %></h1>
            <h6><em><%= @movie.tagline %></em></h6>
            <p><%= @movie.overview %></p>

            <div class="pull-right quicklinks">
              <span class="label label-info hidden-sm hidden-xs">Released: <%= @movie.released_formatted %></span>
              <span class="label label-info">Rating: <%= @movie.certification %></span>
              <span class="label label-info hidden-xs">Runtime: <%= @movie.runtime %> mins</span>

              <% if @movie.imdb_id %>
                <span class="label label-info"><a href="http://www.imdb.com/title/<%= @movie.imdb_id %>">IMDB</a></span>
              <% end %>
              
              <% if @movie.trailer %>
                <span class="label label-info">
                  <a href="<%= @movie.trailer %>"><i class="fa fa-youtube">YouTube</i></a>
                </span>
              <% end %>

            </div>

          </div><!-- end col -->

        </div><!-- end row -->

          
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs js-movie-tabs" role="tablist" data-movie-id="<%= @movie.id %>">
      <li><a class='js-default-tab' href="#recommendations" role="tab" data-toggle="tab" >Recommendations</a></li>
      <li><a href="#Rotten-Tomatoes-Reviews" role="tab" data-toggle="tab">Rotten Tomatoes Reviews</a></li>
      <li><a href="#trakt-reviews" role="tab" data-toggle="tab">Trakt Reviews</a></li>
      <li><a href="#cinema-times" role="tab" data-toggle="tab">Cinema Times</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane active" id="recommendations">

      </div>
      
      <div class="tab-pane" id="Rotten-Tomatoes-Reviews">
        <p>WIP</p>
      </div>
      
      <div class="tab-pane" id="trakt-reviews">
        <p>WIP</p>
      </div>
      
      <div class="tab-pane" id="cinema-times">
        <p>WIP</p>
      </div>
    
    </div>
  </div>
</div>

<!-- Related Movies -->
<script id="template-related-movie-info" type="x-tmpl-mustache">

  <div class="list-group">

    {{#movies}}
      <a href='{{movieurl}}' class='list-group-item row'>

        <div class='col-sm-2'>
          <img src='{{posterSmallURL}}' width='64' class='img-responsive' />
        </div>

        <div class='col-sm-10'>
          <h4 class="list-group-item-heading">{{title}}</h4>
          <p class="list-group-item-text">{{overview}}</p>
        </div>
        
      </a>
    {{/movies}}

  </div>

</script>

<% if false %>
  <%= link_to 'Edit', edit_movie_path(@movie) %> |
  <%= link_to 'Back', movies_path %>
<% end %>