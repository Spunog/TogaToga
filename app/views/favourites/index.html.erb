<ol class="breadcrumb">
  <li class="active">Favourites</li>
</ol>

<div class="row">

   <% @favourites.each do |favourite| %>
    <div class='col-md-12 col-xs-12'>
      <div class='related-movie'>

        <div class='list-group-item row'>
          <div class='col-sm-2 col-xs-12 text-center'>
            <%= image_tag favourite.movie.posterSmallURL, size: '64', class: 'img-responsive' %>
            <small class='visible-xs'><%= truncate(favourite.movie.title, length: 70) %></small>
          </div>

          <div class='col-sm-8 hidden-xs'>
            <h4 class="list-group-item-heading"><%= truncate(favourite.movie.title, length: 40) %></h4>
            <p class="list-group-item-text visible-xs"><%= truncate(favourite.movie.overview, length: 50) %></p>
            <p class="list-group-item-text visible-sm"><%= truncate(favourite.movie.overview, length: 70) %></p>
            <p class="list-group-item-text visible-md"><%= truncate(favourite.movie.overview, length: 120) %></p>
            <p class="list-group-item-text visible-lg"><%= truncate(favourite.movie.overview, length: 160) %></p>
          </div>

          <div class='col-sm-2 hidden-xs'>

            <div class="list-group">

              <%= link_to movie_path(favourite.movie), class: 'list-group-item' do %>
                <span aria-hidden="true" class="glyphicon glyphicon-info-sign"></span> View
              <% end %>

              <%= link_to [@user,favourite], class: 'list-group-item', method: :delete, data: { confirm: 'Are you sure you want to remove this favourite?' } do %>
                <span aria-hidden="true" class="glyphicon glyphicon-remove-sign"></span> Remove
              <% end %>

            </div>

          </div>
        
        </div>

      </div>
    </div>

  <% end %>

</div>

<div class="row text-center">
  <%= will_paginate @movies,previous_label: h("<"), next_label: h(">"), renderer: BootstrapPagination::Rails %>  
</div>