<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<div class="panel panel-default">
			<div class="panel-heading">
			<span class="glyphicon glyphicon-lock"></span> Forgot your password?</div>
			<div class="panel-body">

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal col-md-offset-2 col-md-8" }) do |f| %>

					<% if devise_error_messages! != '' %>
						<div class="alert alert-danger">
							<%= devise_error_messages! %>
						</div>
					<% end %>

					<div>
			            <%= f.label :email %>
			            <div>
							<%= f.text_field :email, autofocus: true, class:"margin_top col-sm-12" %>
			            </div>
					</div>

					<div>
						<%= f.submit "Send Reset Information", class:"btn btn-primary margin_top margin_bottom col-xs-offset-1 col-xs-9" %>
					</div>
				<% end %>
			</div>
			<div class="panel-footer"><%= render "devise/shared/links" %></div>
		</div>
	</div>
</div>